@model List<Cliente>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a asp-action="Guardar" asp-controller="Cliente" class="btn btn-primary">Crear Cliente</a>

<h1> Los clientes son:</h1>

@foreach( var item in Model )
{
    <p>@item.Id</p>
    <p>@item.nombre</p>
    <p>@item.telefono</p>
    <p>@item.email</p>
    <a asp-action="Editar" asp-controller="Cliente" class="btn btn-secondary" asp-route-id="@item.Id" >Editar Cliente</a> 
    <br> 
    <a asp-action="Eliminar" asp-controller="Cliente" class="btn btn-danger" asp-route-id="@item.Id" >Eliminar Cliente</a>

}
